<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#336c97cf"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/main_color"
                android:orientation="horizontal">
                <com.chocoroll.ourcompay.Model.MTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:text="아모레"
                    android:textColor="#ffe"
                    android:id="@+id/com_name"
                    />

                <com.chocoroll.ourcompay.Model.MTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="4dp"
                    android:text=" > 견학 신청서"
                    android:textColor="#ffe"
                    />

            </LinearLayout>



            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#336c97cf"
                android:orientation="vertical" >
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/write_pro_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <com.chocoroll.ourcompay.Model.MTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="예약 날짜 : "
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:typeface="sans" />

                    <com.chocoroll.ourcompay.Model.MTextView
                        android:id="@+id/year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:padding="10dp"
                        android:text="2015"
                        android:singleLine="true"
                        android:textSize="15dp"
                        android:typeface="sans" />

                    <com.chocoroll.ourcompay.Model.MTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/"/>

                    <com.chocoroll.ourcompay.Model.MTextView
                        android:id="@+id/month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:padding="10dp"
                        android:text="05"
                        android:singleLine="true"
                        android:textSize="15dp"
                        android:typeface="sans" />

                    <com.chocoroll.ourcompay.Model.MTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/"/>

                    <com.chocoroll.ourcompay.Model.MTextView
                        android:id="@+id/day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:padding="10dp"
                        android:text="15"
                        android:singleLine="true"
                        android:textSize="15dp"
                        android:typeface="sans" />



                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#336c97cf"
                android:orientation="vertical" >
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/write_pro_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <com.chocoroll.ourcompay.Model.MTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="방문 목적 : "
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:typeface="sans" />

                    <EditText
                        android:id="@+id/purpose"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:maxLines="4"
                        android:padding="10dp"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:typeface="sans" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#336c97cf"
                android:orientation="vertical" >
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <com.chocoroll.ourcompay.Model.MTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="방문자 성명 : "
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:typeface="sans" />

                    <EditText
                        android:id="@+id/reserv_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:maxLines="1"
                        android:padding="10dp"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:typeface="sans" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#336c97cf"
                android:orientation="vertical" >
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <com.chocoroll.ourcompay.Model.MTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="소속 : "
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:typeface="sans" />

                    <EditText
                        android:id="@+id/belong"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:maxLines="1"
                        android:padding="10dp"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:typeface="sans" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#336c97cf"
                android:orientation="vertical" >
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/write_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <com.chocoroll.ourcompay.Model.MTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="연락처 : "
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:typeface="sans" />

                    <Spinner
                        android:id="@+id/spinner_phone"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        />

                    <com.chocoroll.ourcompay.Model.MTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" - "/>

                    <EditText
                        android:id="@+id/phone2"
                        android:background="@null"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:typeface="sans"
                        android:digits="0123456789-"
                        android:inputType="phone"/>

                    <com.chocoroll.ourcompay.Model.MTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" - "/>

                    <EditText
                        android:id="@+id/phone3"
                        android:layout_width="60dp"
                        android:background="@null"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:typeface="sans"
                        android:digits="0123456789-"
                        android:inputType="phone"/>

                </LinearLayout>
            </RelativeLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#336c97cf"
                android:orientation="vertical" >
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/write_maxBook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <com.chocoroll.ourcompay.Model.MTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="방문 인원 : "
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:typeface="sans" />

                    <EditText
                        android:id="@+id/member"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:padding="10dp"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:typeface="sans"
                        android:digits="0123456789-"
                        android:inputType="phone"
                        />

                    <com.chocoroll.ourcompay.Model.MTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 명 "/>
                </LinearLayout>
            </RelativeLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#336c97cf"
                android:orientation="vertical" >
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <com.chocoroll.ourcompay.Model.MTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="예상 질문"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:typeface="sans"/>

                    <EditText
                        android:id="@+id/question"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@null"
                        android:padding="10dp"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:typeface="sans" />

                </LinearLayout>
            </RelativeLayout>



            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#336c97cf"
                android:orientation="vertical" >
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <com.chocoroll.ourcompay.Model.MTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="견학 계획 및 하고 싶은 말"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:typeface="sans" />

                    <EditText
                        android:id="@+id/comment"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@null"
                        android:padding="10dp"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:typeface="sans" />

                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#336c97cf"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <com.chocoroll.ourcompay.Model.MTextView
                    android:clickable="true"
                    android:layout_margin="10dp"
                    android:id="@+id/uploadButton"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:text="작성"
                    android:background="@null"
                    android:textColor="#0099CC"
                    android:textSize="13dp"
                    android:typeface="sans" />

                <com.chocoroll.ourcompay.Model.MTextView
                    android:clickable="true"
                    android:layout_margin="10dp"
                    android:id="@+id/report_cancelbt"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:text="취소"
                    android:background="@null"
                    android:textColor="#ff5444"
                    android:textSize="13dp"
                    android:typeface="sans" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>