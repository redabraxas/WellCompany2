<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/main_color">

        <FrameLayout
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent">
            <com.chocoroll.ourcompay.Model.EBTextView
                android:id="@+id/title_bar_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:typeface="serif"
                android:text=" > 회사 회원가입 "/>

        </FrameLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:orientation="vertical" >



            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#336c97cf"
                android:orientation="vertical" >
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <com.chocoroll.ourcompay.Model.MTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="ID : "
                        android:textColor="@color/text"
                        android:textSize="15dp"
                        android:typeface="sans" />

                    <EditText
                        android:id="@+id/user_email"
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:padding="10dp"
                        android:textColor="@color/text"
                        android:textSize="15dp"
                        android:typeface="sans" />

                </LinearLayout>
            </RelativeLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#336c97cf"
                android:orientation="vertical" >
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <com.chocoroll.ourcompay.Model.MTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="PASS WORD : "
                        android:textColor="@color/text"
                        android:textSize="15dp"
                        android:typeface="sans" />


                    <EditText
                        android:password="true"
                        android:id="@+id/user_pw"
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:padding="10dp"
                        android:textColor="@color/text"
                        android:textSize="15dp"
                        android:typeface="sans" />

                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#336c97cf"
                android:orientation="vertical" >
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/write_pro_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <com.chocoroll.ourcompay.Model.MTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="회사 구분 : "
                        android:textColor="@color/text"
                        android:textSize="15dp"
                        android:typeface="sans" />

                    <LinearLayout
                        android:padding="10dp"
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <Spinner
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/spinner_big_category"
                            android:spinnerMode="dropdown"
                            />

                        <Spinner
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/spinner_small_category"
                            android:spinnerMode="dropdown" />
                    </LinearLayout>


                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#336c97cf"
                android:orientation="vertical" >
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/write_pro_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <com.chocoroll.ourcompay.Model.MTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="회사명 : "
                        android:textColor="@color/text"
                        android:textSize="15dp"
                        android:typeface="sans" />

                    <EditText
                        android:id="@+id/com_name"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColor="@color/text"
                        android:textSize="15dp"
                        android:typeface="sans" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#336c97cf"
                android:orientation="vertical" >
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <com.chocoroll.ourcompay.Model.MTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="대표 메일 주소 : "
                        android:textColor="@color/text"
                        android:textSize="15dp"
                        android:typeface="sans" />

                    <EditText
                        android:id="@+id/com_email"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColor="@color/text"
                        android:textSize="15dp"
                        android:typeface="sans" />
                </LinearLayout>
            </RelativeLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#336c97cf"
                android:orientation="vertical" >
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/write_site"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <com.chocoroll.ourcompay.Model.MTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="대표 사이트 : "
                        android:textColor="@color/text"
                        android:textSize="15dp"
                        android:typeface="sans" />

                    <EditText
                        android:id="@+id/site"
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:padding="10dp"
                        android:textColor="@color/text"
                        android:textSize="15dp"
                        android:typeface="sans" />

                </LinearLayout>
            </RelativeLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#336c97cf"
                android:orientation="vertical" >
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <com.chocoroll.ourcompay.Model.MTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="회사 주소 : "
                        android:textColor="@color/text"
                        android:textSize="15dp"
                        android:typeface="sans" />

                    <EditText
                        android:id="@+id/adress"
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:padding="10dp"
                        android:textColor="@color/text"
                        android:textSize="15dp"
                        android:typeface="sans" />

                </LinearLayout>
            </RelativeLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#336c97cf"
                android:orientation="vertical" >
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/write_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <com.chocoroll.ourcompay.Model.MTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="연락처 : "
                        android:textColor="@color/text"
                        android:textSize="15dp"
                        android:typeface="sans" />

                    <Spinner
                        android:id="@+id/spinner_phone"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        />

                    <com.chocoroll.ourcompay.Model.MTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" - "/>

                    <EditText
                        android:id="@+id/phone2"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:textColor="@color/text"
                        android:textSize="15dp"
                        android:typeface="sans"
                        android:digits="0123456789-"
                        android:inputType="phone"/>

                    <com.chocoroll.ourcompay.Model.MTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" - "/>

                    <EditText
                        android:id="@+id/phone3"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:textColor="@color/text"
                        android:textSize="15dp"
                        android:typeface="sans"
                        android:digits="0123456789-"
                        android:inputType="phone"/>

                </LinearLayout>
            </RelativeLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#336c97cf"
                android:orientation="vertical" >
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/report_write_picturelayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <com.chocoroll.ourcompay.Model.MTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="회사 로고  "
                        android:textColor="@color/text"
                        android:textSize="15dp"
                        android:typeface="sans" />


                    <com.chocoroll.ourcompay.Model.MTextView
                        android:clickable="true"
                        android:paddingRight="8dp"
                        android:paddingLeft="8dp"
                        android:id="@+id/button_selectpic"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:text="upload"
                        android:background="#336c97cf"
                        android:textSize="13dp"
                        android:typeface="sans" />

                </LinearLayout>


            </RelativeLayout>

            <ImageView
                android:id="@+id/imageView_pic"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:paddingBottom="10dp"/>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#336c97cf"
                android:orientation="vertical" >
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/write_pro_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <com.chocoroll.ourcompay.Model.MTextView
                        android:gravity="top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="회사 소개 : "
                        android:textColor="@color/text"
                        android:textSize="15dp"
                        android:typeface="sans" />

                    <EditText
                        android:id="@+id/com_intro"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@null"
                        android:padding="10dp"
                        android:textColor="@color/text"
                        android:textSize="15dp"
                        android:typeface="sans" />
                </LinearLayout>
            </RelativeLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#336c97cf"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <com.chocoroll.ourcompay.Model.MTextView
                    android:clickable="true"
                    android:layout_margin="10dp"
                    android:id="@+id/uploadButton"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:text="JOIN"
                    android:gravity="center"
                    android:textColor="#0099CC"
                    android:textSize="13dp"
                    android:typeface="sans" />

                <com.chocoroll.ourcompay.Model.MTextView
                    android:clickable="true"
                    android:layout_margin="10dp"
                    android:id="@+id/cancelbt"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:text="CANCEL"
                    android:gravity="center"
                    android:textColor="#ff4444"
                    android:textSize="13dp"
                    android:typeface="sans" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>