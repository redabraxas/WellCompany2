
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chocoroll.ourcompay.Login.JoinSelectFragment"
    android:background="#ffffff"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#336c97cf"
        android:orientation="vertical" >
    </LinearLayout>



    <ImageButton xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="70dp"
        android:id="@+id/btnJoinUser"
        android:background="@null"
        android:src="@drawable/user_join" />

    <ImageButton xmlns:android="http://schemas.android.com/apk/res/android"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="72dp"
        android:background="@null"
        android:id="@+id/btnJoinCompany"
        android:src="@drawable/company_join" />


</LinearLayout>